<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.orderdetail.model.OrderDetailVO" table="OrderDetail">

		<composite-id>
			<key-property name="OrderSumID" column="OrderSumID" />
			<key-property name="DishID" column="DishID"  />
		</composite-id>

		<property name="Quantity" column="Quantity" />
		<property name="Price" column="Price" />
		<property name="Subtotal" column="Subtotal" />
		<many-to-one name="DishVO" class="com.dish.model.DishVO"
			lazy="false" insert="false" update="false" >
			<column name="DishID" />
		</many-to-one>

	</class>
</hibernate-mapping>