<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.accuse.model.AccuseVO" table="Accuse" >
        
        <id name="AccuseID" column="AccuseID">
            <generator class="identity"/>
        </id>
        <property name="Reason" column="Reason" />
        <property name="OrderSumID" column="OrderSumID" />
        <property name="RestDiscussID" column="RestDiscussID" />
        <property name="DealCond" column="DealCond" />
        <property name="DealDetail" column="DealDetail" />
        
        <property name="RestID" column="RestID" />
        <property name="MemberAcc" column="MemberAcc" />
        <property name="CaseID" column="CaseID" />

         <many-to-one name="RestaurantVO" class="com.restaurant.model.RestaurantVO" lazy="false" insert="false" update="false">
            <column name="RestID" />
        </many-to-one>
                <!--
        <many-to-one name="MemberVO" class="com.member.model.MemberVO" lazy="false">
            <column name="MemberAcc" />
        </many-to-one>
        
        <many-to-one name="AccuseCaseVO" class="com.accusecase.model.AccuseCaseVO" lazy="false">
            <column name="CaseID" />
        </many-to-one> -->
        
    </class>
</hibernate-mapping>

