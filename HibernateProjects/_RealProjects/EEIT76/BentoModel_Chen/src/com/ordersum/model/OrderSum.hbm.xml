<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.ordersum.model.OrderSumVO" table="OrderSum">

		<id name="OrderSumID" column="OrderSumID">
		</id>

		<property name="MemberPhone" column="MemberPhone" />
		<property name="City" column="City" />
		<property name="Area" column="Area" />
		<property name="Addr" column="Addr" />
		<property name="Latitude" column="Latitude" />
		<property name="Longitude" column="Longitude" />
		<property name="TotalPrice" column="TotalPrice" />
		<property name="OrderDate" column="OrderDate" />
		<property name="OrderTime" column="OrderTime" />
		<property name="ExpectDate" column="ExpectDate" />
		<property name="ExpectTime" column="ExpectTime" />
		<property name="Memo" column="Memo" />
		<property name="MemoResponse" column="MemoResponse" />
		

		<many-to-one name="RestaurantVO" class="com.restaurant.model.RestaurantVO"
			lazy="false">
			<column name="RestID" />
		</many-to-one>
		<many-to-one name="MemberVO" class="com.member.model.MemberVO"
			lazy="false">
			<column name="MemberAcc" />
		</many-to-one>
		<many-to-one name="OrderCondVO" class="com.ordercond.model.OrderCondVO"
			lazy="false">
			<column name="OrderCondID" />
		</many-to-one>
		<set name="orderDetails" table="OrderDetail" lazy="false" cascade="all"
			inverse="true" order-by="DishID asc">
			<key>
				<column name="OrderSumID" />
			</key>
			<one-to-many class="com.orderdetail.model.OrderDetailVO" />
		</set>

	</class>
</hibernate-mapping>

