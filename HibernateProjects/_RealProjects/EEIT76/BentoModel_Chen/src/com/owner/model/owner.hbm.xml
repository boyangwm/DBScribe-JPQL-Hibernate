<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.owner.model.OwnerVO" table="Owner">

		<id name="OwnAcc" column="OwnAcc"></id>

		<property name="OwnPwd" column="OwnPwd" />
		<property name="OwnEmail" column="OwnEmail" />
		<property name="OwnLastName" column="OwnLastName" />
		<property name="OwnFirstName" column="OwnFirstName" />
		<property name="OwnGender" column="OwnGender" />
		<property name="OwnOpen" column="OwnOpen" />
		<set name="restaurants" table="Restaurant" lazy="false" cascade="all"
			inverse="true" order-by="RestID asc">
			<key>
				<column name="OwnAcc" />
			</key>
			<one-to-many class="com.restaurant.model.RestaurantVO" />
		</set>

	</class>
</hibernate-mapping>

