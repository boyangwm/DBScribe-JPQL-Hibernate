<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.restaurant.model.RestaurantVO" table="Restaurant" >
        
        <id name="RestID" column="RestID">
            <generator class="identity"/>
        </id>
        
        <property name="RestName" column="RestName" />
        <property name="RestPhone" column="RestPhone" />
        <property name="RestCel" column="RestCel" />
        <property name="RestCity" column="RestCity" />
        <property name="RestArea" column="RestArea" />
        <property name="RestAddr" column="RestAddr" />
        <property name="RestLatitude" column="RestLatitude" />
        <property name="RestLongitude" column="RestLongitude" />
        <property name="LastOrder_midday" column="LastOrder_midday" />
        <property name="LastOrder_night" column="LastOrder_night" />

         <property name="OwnAcc" column="OwnAcc" />
         
         
       <!--  <many-to-one name="OwnerVO" class="com.owner.model.OwnerVO" lazy="false">
            <column name="OwnAcc" />
        </many-to-one>
       -->
        <set name="serviceAreas" table="ServiceArea" lazy="false" cascade="all"  
        	inverse="true"  order-by="ServiceAreaID asc">			
			<key>
				<column name="RestID" />
			</key>
			<one-to-many class="com.servicearea.model.ServiceAreaVO" />
		</set> 
        
        <set name="restKinds" table="RestKind" lazy="false" cascade="delete"  
        	inverse="true"  order-by="KindID asc">			
			<key>
				<column name="RestID" />
			</key>
			<one-to-many class="com.restkind.model.RestKindVO" />
		</set> 
		
		<set name="ads" table="Advertisement" lazy="false" cascade="all"  
        	inverse="true"  order-by="RestID asc">			
			<key>
				<column name="RestID" />
			</key>
			<one-to-many class="com.ad.model.AdVO" />
		</set> 
		
		<set name="restDiscusses" table="RestDiscuss" lazy="false" cascade="all"  
        	inverse="true"  order-by="RestDiscussID asc">			
			<key>
				<column name="RestID" />
			</key>
			<one-to-many class="com.restdiscuss.model.RestDiscussVO" />
		</set> 
        
        <set name="dishes" table="Dish" lazy="false" cascade="all"  
        	inverse="true"  order-by="DishID asc">	
			<key>
				<column name="RestID" />
			</key>
			<one-to-many class="com.dish.model.DishVO" />
		</set> 
		
		<set name="accuses" table="Accuse" lazy="false" cascade="all"  
        	inverse="true"  order-by="AccuseID asc">	
			<key>
				<column name="RestID" />
			</key>
			<one-to-many class="com.accuse.model.AccuseVO" />
		</set> 
        
    </class>
</hibernate-mapping>

