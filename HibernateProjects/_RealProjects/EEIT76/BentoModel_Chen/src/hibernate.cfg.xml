<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

	<session-factory>
        
        <!-- 連線池c3p0設定-->
		<property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
		<property name="hibernate.connection.url">jdbc:sqlserver://y12wetq4l4.database.windows.net:1433;database=Bento76</property>
		<property name="hibernate.connection.username">eeit76bento</property>
		<property name="hibernate.connection.password">eeit76@bento</property>       
		<property name="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
		<property name="hibernate.c3p0.min_size">5</property>
		<property name="hibernate.c3p0.max_size">20</property>
		<property name="hibernate.c3p0.timeout">1800</property>
		<property name="hibernate.c3p0.max_statements">50</property>
        
		<!--SQL方言,以下使用SQLServer -->
		<property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>

		<!--是否要顯示實際操作資料庫時的SQL -->
		<property name="hibernate.show_sql">true</property>

        <!-- Disable the second-level cache -->
        <property name="hibernate.cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

		<!--交易管理類型, 以下使用JDBC Transaction -->
		<property name="hibernate.transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>
        
        <!-- Enable Hibernate's automatic session context management -->
		<property name="hibernate.current_session_context_class">thread</property>

		<!--Java物件與資料庫表格的映射檔 -->
		<mapping resource="com/ad/model/ad.hbm.xml" />
		<mapping resource="com/kindlist/model/kindlist.hbm.xml" />
		<mapping resource="com/owner/model/owner.hbm.xml" />
		<mapping resource="com/restkind/model/restkind.hbm.xml" />
		<mapping resource="com/accusecase/model/AccuseCase.hbm.xml" />
		<mapping resource="com/orderdetail/model/OrderDetail.hbm.xml" />
		<mapping resource="com/restdiscuss/model/RestDiscuss.hbm.xml" />
		<mapping resource="com/favorite/model/Favorite.hbm.xml" />
		<mapping resource="com/accuse/model/Accuse.hbm.xml" />
		<mapping resource="com/dish/model/Dish.hbm.xml" />
		<mapping resource="com/restaurant/model/Restaurant.hbm.xml" />
		<mapping resource="com/servicearea/model/ServiceArea.hbm.xml" />
		<mapping resource="com/member/model/Member.hbm.xml" />
		<mapping resource="com/ordercond/model/OrderCond.hbm.xml" />
		<mapping resource="com/ordersum/model/OrderSum.hbm.xml" />
		<mapping resource="com/useraddr/model/UserAddr.hbm.xml" />
		<mapping resource="com/treatcase/model/TreatCase.hbm.xml" />
		<mapping resource="com/randompwd/model/RandomPwd.hbm.xml" />
		
	</session-factory>
	
</hibernate-configuration>
